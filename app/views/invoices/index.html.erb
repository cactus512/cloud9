<h1>Listing invoices</h1>
<div class="media">
        <div class=" media-body">
          <table class= "table  table-hover table-striped table-condensed">
            <thead>
              <tr>
                <th>Date</th>
                <th>Company</th>
                <th>Tax</th>
                <th>Sller</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @invoices.each do |invoice| %>
                <tr>
                  <td><%= invoice.date.strftime("%y-%m-%d") %></td>
                  <td><%= invoice.company %></td>
                  <td><%= invoice.tax %></td>
                  <td><%= invoice.sller %></td>
                  <td><%= link_to 'Show', invoice, class: "btn btn-sm btn-default" %></td>
                  <td><%= link_to 'Edit', edit_invoice_path(invoice), class:"btn btn-sm btn-success" %></td>
                  <td><%= link_to 'Destroy', invoice, method: :delete, class:"btn btn-sm btn-danger" , data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
</div>
<br>

<%= link_to 'New Invoice', new_invoice_path,  class: "btn btn-sm btn-info" %>
